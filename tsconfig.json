{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",          // React 18 JSX runtime
    "strict": true,              // keep the guardrails
    "skipLibCheck": true,        // donâ€™t parse all d.ts in node_modules
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "react",
      "react-dom",
      "three"                    // pulls those @types declarations in
    ],
    "baseUrl": ".",              // optional, handy for path aliases
    "paths": {                   // optional aliases
      "@src/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
